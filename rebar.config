{minimum_otp_vsn, "21.0"}.

{deps, [
  {kvs, ".*", {git, "git://github.com/synrc/kvs", {tag,"7.9.1"}}},
  {jsone,   ".*", {git, "git://github.com/sile/jsone.git", {tag, "1.5.3"}}},
  {cuttlefish, ".*", {git, "git://github.com/xio/cuttlefish", {branch,"develop"}}}
]}.

{erl_opts, [warn_unused_vars,
            warn_shadow_vars,
            warn_unused_import,
            warn_obsolete_guard,
            debug_info,
            compressed %% for edge
           ]}.

{validate_app_modules, true}.

{xref_checks, [undefined_function_calls, undefined_functions,
               locals_not_used, deprecated_function_calls,
               warnings_as_errors, deprecated_functions
              ]}.

{eunit_opts, [verbose, {report,{eunit_surefire,[{dir,"."}]}}]}.

{cover_enabled, true}.
{cover_opts, [verbose]}.
{cover_export_enabled, true}.

{dialyzer, []}.
{dialyzer_base_plt_apps, [kernel, stdlib, erts, sasl, ssl, syntax_tools, compiler, crypto, jsone]}.

{profiles,
 [{test,
   [{plugins, [{coveralls, {git, "https://github.com/emqx/coveralls-erl", {branch, "github"}}}]},
    {deps, [{meck, "0.8.13"}, {proper, "1.3.0"}]},
    {erl_opts, [debug_info]}
   ]}
 ]}.
